<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorClear"
    tools:context=".student.StudentLoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:background="@color/colorTitleBar"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:textColor="@color/colorBasic"
            android:textSize="17dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="상벌점"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:weightSum="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_titlebar_point"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:textColor="@color/colorTextDefault"
                android:textSize="15dp"
                android:background="@drawable/titlebar_select"
                android:text="상벌점"/>

            <TextView
                android:id="@+id/btn_titlebar_pointstate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:textColor="@color/colorTextBlur"
                android:textSize="15dp"
                android:text="현황"/>

        </LinearLayout>
    </LinearLayout>


    <ScrollView
        android:id="@+id/main_area"
        android:background="@color/colorFloor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="1px"
        android:paddingBottom="1px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorFloor">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="30dp"
                android:elevation="3dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorClear">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextBlur"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="2021.04.07"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/colorTextDefault"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:text="수요일"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:layout_marginRight="20dp"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="15dp"
                        android:inputType="text"
                        android:hint="상벌점 사유"
                        android:textSize="15dp"
                        android:background="@drawable/input_border2"/>
                    <EditText
                        android:layout_width="100dp"
                        android:layout_height="45dp"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="15dp"
                        android:inputType="number"
                        android:hint="상벌점"
                        android:textSize="15dp"
                        android:background="@drawable/input_border2"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="30dp"
                android:paddingBottom="50dp"
                android:elevation="3dp"
                android:background="@color/colorClear">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:weightSum="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="30dp"
                        android:layout_weight="0.5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/colorTextBlur"
                            android:textSize="18dp"
                            android:text="호실"/>

                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="10dp"
                        android:background="@color/colorTextBlurLight"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="0.5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/colorTextBlur"
                            android:textSize="18dp"
                            android:text="이름"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_room"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:background="@drawable/hide_show_toggle_button">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:paddingLeft="30dp"
                        android:gravity="center"
                        android:layout_weight="0.5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/colorTextDefault"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:text="401호"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:layout_weight="0.5">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="15dp"
                            android:gravity="right"
                            android:src="@drawable/arrow_down"
                            app:tint="@color/colorTextBlur" />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/group_room"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:weightSum="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="left"
                                android:src="@drawable/unchecked"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/colorTextBlur"
                                android:textSize="18dp"
                                android:text="401호"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_weight="0.5">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:textColor="@color/colorTextBlur"
                                android:textSize="18dp"
                                android:text="이연지"/>

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:weightSum="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="left"
                                android:src="@drawable/unchecked"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/colorTextBlur"
                                android:textSize="18dp"
                                android:text="401호"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_weight="0.5">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:textColor="@color/colorTextBlur"
                                android:textSize="18dp"
                                android:text="이연지"/>

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:weightSum="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="left"
                                android:src="@drawable/unchecked"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/colorTextBlur"
                                android:textSize="18dp"
                                android:text="401호"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_weight="0.5">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:textColor="@color/colorTextBlur"
                                android:textSize="18dp"
                                android:text="이연지"/>

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:weightSum="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="left"
                                android:src="@drawable/unchecked"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/colorTextBlur"
                                android:textSize="18dp"
                                android:text="401호"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_weight="0.5">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:textColor="@color/colorTextBlur"
                                android:textSize="18dp"
                                android:text="이연지"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="bottom"
        android:background="@color/colorBasic">
        <TextView
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="17dp"
            android:textStyle="bold"
            android:text="확인" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/menu_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/bottombar"
        android:weightSum="5">

        <ImageView
            android:id="@+id/btn_bottombar_board"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="12dp"
            android:src="@drawable/bottombar_board" />
        <ImageView
            android:id="@+id/btn_bottombar_goout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="12dp"
            android:src="@drawable/bottombar_goout" />

        <ImageView
            android:id="@+id/btn_bottombar_enter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="12dp"
            android:src="@drawable/bottombar_enter" />
        <ImageView
            android:id="@+id/btn_bottombar_point"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="12dp"
            android:src="@drawable/bottombar_point_1" />
        <ImageView
            android:id="@+id/btn_bottombar_my"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="12dp"
            android:src="@drawable/bottombar_my" />



    </LinearLayout>

</LinearLayout>