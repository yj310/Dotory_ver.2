<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorClear"
    tools:context=".student.StudentLoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="5dp"
        android:background="@color/colorTitleBar">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/cancel"
            app:tint="@color/colorBasic" />
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/btn_modify_post"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="@color/colorTextBlurDark"
            android:text="수정하기"/>
    </LinearLayout>


    <ScrollView
        android:id="@+id/main_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="1px"
        android:paddingBottom="1px"
        android:background="@color/colorClear">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="3dp"
            android:padding="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/input_title"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:hint="제목을 입력하세요"
                android:padding="12dp"
                android:text=""
                android:textColor="#222222"
                android:textSize="20dp" />


            <EditText
                android:id="@+id/input_content"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="top"
                android:hint="내용을 입력하세요\n\n\n\n\n\n\n\n\n\n\n"
                android:padding="12dp"
                android:text=""
                android:textColor="#222222"
                android:textSize="17dp"
                android:background="@color/colorClear"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"/>
                <ImageView
                    android:id="@+id/btn_remove_picture"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:src="@drawable/cancel"
                    android:visibility="invisible"
                    app:tint="@color/colorTextBlur" />
            </FrameLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.09"
        android:paddingHorizontal="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_add_picture"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:scaleType="fitCenter"
            android:src="@drawable/add_picture" />

    </LinearLayout>

</LinearLayout>