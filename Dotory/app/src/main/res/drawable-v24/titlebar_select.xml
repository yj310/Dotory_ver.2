<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- solid -->
    <item>
        <shape>
            <padding android:bottom="5dp"/>
            <corners android:radius="0dp" />
            <solid android:color="@color/colorBasic" />
        </shape>
    </item>

    <item>
        <shape>
            <padding android:top="5dp" android:right="5dp" android:left="5dp" />
            <corners android:radius="0dp" />
            <solid android:color="@color/colorClear" />
        </shape>
    </item>


    <!-- Background -->
    <item>
        <shape>
            <solid android:color="#ffffff" />
            <corners android:radius="0dp" />
        </shape>
    </item>
</layer-list>